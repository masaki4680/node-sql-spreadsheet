{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "es2022",
    "sourceMap": true,
    "outDir": "./js",
    "rootDir": "./ts",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true,
    "plugins": [
      {
        "transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
        "after": true,
      }
    ]
  }
}